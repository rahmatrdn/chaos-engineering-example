{
  "version": "1.0.0",
  "title": "GET jsonplaceholder todos/1 via Toxiproxy",
  "description": "Create a Toxiproxy proxy on port 6060 and verify GET /todos/1 returns 200 via the proxy.",
  "configuration": {
    "toxiproxy_host": "toxiproxy",
    "toxiproxy_port": 8474
  },
  "steady-state-hypothesis": {
    "title": "API responds 200 via proxy",
    "probes": [
      {
        "type": "probe",
        "name": "status-200-todos-1-via-proxy",
        "tolerance": 200,
        "provider": {
          "type": "http",
          "timeout": 5,
          "verify_tls": true,
          "url": "https://jsonplaceholder.typicode.com/todos/1",
          "method": "GET"
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "create-proxy-6060-to-jsonplaceholder-80",
      "provider": {
        "type": "python",
        "module": "chaostoxi.proxy.actions",
        "func": "create_proxy",
        "arguments": {
          "proxy_name": "jsonplaceholder_proxy",
          "listen_port": 6060,
          "upstream_host": "jsonplaceholder.typicode.com",
          "upstream_port": 80,
          "enabled": true
        }
      },
      "pauses": {
        "after": 1
      }
    },
    {
      "type": "probe",
      "name": "call-todos-1-through-proxy",
      "tolerance": 200,
      "provider": {
        "type": "http",
        "timeout": 5,
        "verify_tls": false,
        "url": "http://toxiproxy:6060/todos/1",
        "method": "GET"
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "delete-proxy-6060",
      "provider": {
        "type": "python",
        "module": "chaostoxi.proxy.actions",
        "func": "delete_proxy",
        "arguments": {
          "proxy_name": "jsonplaceholder_proxy"
        }
      }
    }
  ]
}