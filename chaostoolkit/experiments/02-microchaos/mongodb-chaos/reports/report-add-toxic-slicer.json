        "provider": {
          "type": "python",
          "module": "chaostoxi.toxic.actions",
          "func": "create_slicer_toxic",
          "arguments": {
            "for_proxy": "mongo_proxy",
            "toxic_name": "mongo_slicer",
            "average_size": 32,
            "size_variation": 16,
            "delay": 0
          }
        },
        "pauses": {
          "after": 1
        }
      },
      {
        "type": "action",
        "name": "create-order",
        "provider": {
          "type": "http",
          "timeout": 20,
          "url": "http://order-api:8081/orders",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": {
            "customer": "mongo-slicer",
            "item": "kopi",
            "qty": 1
          }
        }
      },
      {
        "type": "action",
        "name": "remove-slicer-mongo",
        "provider": {
          "type": "python",
