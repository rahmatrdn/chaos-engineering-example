          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": {
            "customer": "mongo-slicer",
            "item": "kopi",
            "qty": 1
          }
        }
      },
      {
        "type": "action",
        "name": "remove-slicer-mongo",
        "provider": {
          "type": "python",
