        "type": "action",
        "name": "add-timeout-rabbitmq",
        "provider": {
          "type": "python",
          "module": "chaostoxi.toxic.actions",
          "func": "create_timeout_toxic",
          "arguments": {
            "for_proxy": "rabbitmq_proxy",
            "toxic_name": "rabbitmq_timeout",
            "timeout": 5000
          }
        },
        "pauses": {
          "after": 1
        }
      },
      {
        "type": "action",
        "name": "create-order",
        "provider": {
          "type": "http",
          "timeout": 20,
          "url": "http://order-api:8081/orders",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": {
            "customer": "rabbitmq-timeout",
            "item": "kopi",
            "qty": 1
          }
        }
      },
      {
        "type": "action",
        "name": "remove-timeout-rabbitmq",
        "provider": {
          "type": "python",
          "module": "chaostoxi.toxic.actions",
          "func": "delete_toxic",
