  "experiment": {
    "version": "1.0.0",
    "title": "RabbitMQ slow_close toxic via chaostoxi",
    "description": "This experiment injects a slow_close toxic into the RabbitMQ proxy using chaostoxi to simulate slow connection closes and observe the impact on the microservices.",
    "configuration": {
      "toxiproxy_host": "toxiproxy",
      "toxiproxy_port": 8474
    },
    "runtime": {
      "rollbacks": {
        "strategy": "always"
      }
    },
    "steady-state-hypothesis": {
      "title": "Services may degrade",
      "probes": [
        {
          "type": "probe",
          "name": "order-api-health",
          "tolerance": [
            200
          ],
