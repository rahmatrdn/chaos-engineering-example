  "experiment": {
    "version": "1.0.0",
    "title": "MySQL limiter toxic via chaostoxi",
    "description": "This experiment injects a limiter toxic into the MySQL proxy using chaostoxi to simulate connection limiting and observe the impact on the microservices.",
    "configuration": {
      "toxiproxy_host": "toxiproxy",
      "toxiproxy_port": 8474
    },
    "runtime": {
      "rollbacks": {
        "strategy": "always"
      }
    },
    "steady-state-hypothesis": {
      "title": "Services may degrade",
      "probes": [
        {
          "type": "probe",
          "name": "order-api-health",
          "tolerance": [
            200
          ],
          "provider": {
            "type": "http",
            "timeout": 15,
            "url": "http://order-api:8081/health",
            "method": "GET"
          }
        },
