          "type": "probe",
          "name": "notifier-health",
          "tolerance": [
            200
          ],
          "provider": {
            "type": "http",
            "timeout": 15,
            "url": "http://notifier:8082/health",
            "method": "GET"
          }
        }
      ]
    },
    "method": [
      {
        "type": "action",
        "name": "add-limiter-mysql",
        "provider": {
          "type": "python",
          "module": "chaostoxi.toxic.actions",
          "func": "create_limiter_toxic",
          "arguments": {
            "for_proxy": "mysql_proxy",
            "toxic_name": "mysql_limiter",
            "bytes_limit": 1024
          }
        },
        "pauses": {
          "after": 1
        }
      },
      {
        "type": "probe",
        "name": "create-order-expected",
        "tolerance": [
          201
        ],
        "provider": {
          "type": "http",
          "timeout": 20,
          "url": "http://order-api:8081/orders",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": {
            "customer": "mysql-limiter",
            "item": "kopi",
            "qty": 1
          }
        }
      },
      {
        "type": "action",
        "name": "remove-limiter-mysql",
        "provider": {
          "type": "python",
          "module": "chaostoxi.toxic.actions",
          "func": "delete_toxic",
          "arguments": {
            "for_proxy": "mysql_proxy",
            "toxic_name": "mysql_limiter"
          }
        }
      }
    ],
    "rollbacks": [
