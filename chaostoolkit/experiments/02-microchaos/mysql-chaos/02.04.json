        "name": "add-timeout-mysql",
        "provider": {
          "type": "python",
          "module": "chaostoxi.toxic.actions",
          "func": "create_timeout_toxic",
          "arguments": {
            "for_proxy": "mysql_proxy",
            "toxic_name": "mysql_timeout",
            "timeout": 5000
          }
        },
        "pauses": {
          "after": 1
        }
      },
      {
        "type": "probe",
        "name": "create-order-expected",
        "tolerance": [
          201
        ],
        "provider": {
          "type": "http",
          "timeout": 20,
          "url": "http://order-api:8081/orders",
          "method": "POST",
          "headers": {
            "Content-Type": "application/json"
          },
          "arguments": {
            "customer": "mysql-timeout",
            "item": "kopi",
            "qty": 1
          }
        }
      },
      {
        "type": "action",
        "name": "remove-timeout-mysql",
        "provider": {
          "type": "python",
