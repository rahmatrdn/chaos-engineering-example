{
    "version": "1.0.0",
    "title": "MySQL latency toxic via chaostoxi",
    "description": "This experiment injects a latency toxic into the MySQL proxy using chaostoxi to simulate slow database responses and observe the impact on the microservices.",
    "configuration": {
        "toxiproxy_host": "toxiproxy",
        "toxiproxy_port": 8474
    },
    "runtime": {
        "rollbacks": {
            "strategy": "always"
        }
    },
    "steady-state-hypothesis": {
        "title": "Services healthy baseline",
        "probes": [
            {
                "type": "probe",
                "name": "order-api-200",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "timeout": 8,
                    "url": "http://order-api:8081/health",
                    "method": "GET"
                }
            },
            {
                "type": "probe",
                "name": "notifier-200",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "timeout": 8,
                    "url": "http://notifier:8082/health",
                    "method": "GET"
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "add-latency-mysql",
            "provider": {
                "type": "python",
                "module": "chaostoxi.toxic.actions",
                "func": "create_latency_toxic",
                "arguments": {
                    "for_proxy": "mysql_proxy",
                    "toxic_name": "mysql_latency",
                    "latency":3000,
                    "jitter": 2000
                }
            },
            "pauses": {
                "after": 1
            }
        },
        {
            "type": "action",
            "name": "create-order",
            "provider": {
                "type": "http",
                "timeout": 12,
                "url": "http://order-api:8081/orders",
                "method": "POST",
                "headers": {
                    "Content-Type": "application/json"
                },
                "arguments": {"customer":"mysql-latency","item":"kopi","qty":1}
            }
        },
        {
            "type": "action",
            "name": "remove-latency-mysql",
            "provider": {
                "type": "python",
                "module": "chaostoxi.toxic.actions",
                "func": "delete_toxic",
                "arguments": {
                    "for_proxy": "mysql_proxy",
                    "toxic_name": "mysql_latency"
                }
            }
        }
    ],
    "rollbacks": [
        {
            "type": "action",
            "name": "remove-latency-mysql",
            "provider": {
                "type": "python",
                "module": "chaostoxi.toxic.actions",
                "func": "delete_toxic",
                "arguments": {
                    "for_proxy": "mysql_proxy",
                    "toxic_name": "mysql_latency"
                }
            }
        }
    ]
}